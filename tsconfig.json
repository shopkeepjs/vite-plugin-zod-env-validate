{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"types": ["node"],
		"outDir": "./build",
		"rootDir": "./src",
		"declaration": true
	},
	"include": ["src/*.ts", "*.cjs", ".*.cjs", "*.js", "*.ts", ".eslintrc.cjs", "src/.d.ts"],
	"exclude": ["build/*.js"]
}
