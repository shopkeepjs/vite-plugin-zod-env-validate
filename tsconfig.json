{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"types": ["node"],
		"baseUrl": "./"
	},
	"include": ["./src/**/*.ts", "*.cjs", ".*.cjs", "*.js", "*.ts", ".eslintrc.cjs"]
}
